{
    "root": true,
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true,
        "browser": true
    },
    "plugins": [
        "react",
        "css-modules"
    ],
    "extends": [
        "react-app",
        "eslint:recommended",
        "plugin:css-modules/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEveryWhere": true,
        "ecmaVersion": 11
    },
    "parser": "@babel/eslint-parser",
    "rules": {
        "css-modules/no-unused-class": [
            2,
            {
                "camelCase": true
            }
        ],
        "css-modules/no-undef-class": [
            2,
            {
                "camelCase": true
            }
        ],
        "jsx-a11y/anchor-is-valid": 0,
        "no-var": "error",
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ],
        "eqeqeq": [
            "error",
            "always",
            {
                "null": "ignore"
            }
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "strict": "off",
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-style": [
            "error",
            "last"
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "jsx-a11y/anchor-has-content": "off"
    }
}
